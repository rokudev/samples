<component name="UpgradeScreen" extends="Group" >

  <script type="text/brightscript" uri="pkg:/components/screens/UpgradeScreen.brs" />

  <interface>
        <field id="productName" type="string" alwaysNotify="true"/>
        <field id="productCode" type="string" />
        <field id="productPrice" type="string" />
        <field id="replacedPurchase" type="string" />
        <field id="purchasedName" type="string" />

        <field id="addOns" type="assocarray" />
        <field id="purchasedAddonSkus" type="array" />
        <field id="productsInBundle" type="array" />

        <field id="billing" type="node" />
  </interface>

  <children>
    <Label id="upgradeProductLabel"
            height = "30"
            width = "1000"
            translation = "[50,100]"
            font = "font:LargeBoldSystemFont"/>
    <Label id="currentProductLabel"
            height = "30"
            width = "1000"
            translation = "[50,150]"
            font = "font:LargeBoldSystemFont"/>
    <Label id="includedInBundle" text="Included products" 
        translation = "[130,200]" wrap="true" width="800"
        horizAlign="left" vertAlign="top" visible="false"/>
    <LayoutGroup id="vertLayout" translation = "[130, 250]" visible="false">        
        <Label id="helpMsg" text="Available addons:" />
        <CheckList id="addonChecklist" 
            itemSize = "[600, 70]"
            numRows="7"
            checkedState="[false,false,false,false,false,false,false]"
            vertFocusAnimationStyle="floatingFocus"/>
        <!--ButtonGroup id="buttonGroup" /-->
    </LayoutGroup>

    <Button id="upgradeButton"
            text = "Upgrade"
            translation = "[100, 550]"
            showFocusFootprint="true"
            minWidth="240" />
   <Button id="downgradeButton"
            text = "Downgrade"
            translation = "[400, 550]"
            showFocusFootprint="true"
            minWidth="240"/>
    <Button id="backButton"
            text = "Back"
            translation = "[700, 550]"
            showFocusFootprint="true"
            minWidth="240"/>
  </children>
</component>
